<style>
</style>
<div class="card">
    <div class="card-body signin-card">
        <div class="row">
            <div class="col">
                <div class="card">
                    <%= image_tag "BurgerTechnologies-logo-white.png" %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <h1>Sign In</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="form-floating">
                        <input id="email" class="form-control" placeholder="JohnDoe@example.com" />
                        <label for="email">Email</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="form-floating">
                        <input id="pass" class="form-control" placeholder="************" />
                        <label for="pass">Password</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card">
                    <button id="signin" class="btn btn-primary">Sign In</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <button class="btn btn-primary" onClick="window.location.href='signup'">Sign Up</button>
            </div>
            <div class="col">
                <button class="btn btn-primary" onClick="window.location.href='forgot'">Forgot</button>
            </div>
        </div>
    </div>
</div>